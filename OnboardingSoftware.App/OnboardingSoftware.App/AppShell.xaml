       xmlns:core="clr-namespace:OnboardingSoftware.App"
       FlyoutBehavior="Flyout"
       FlyoutHeaderBehavior="CollapseOnScroll"
       FlyoutBackgroundColor="White"
       Title="OnboardingSoftware"
       x:Class="OnboardingSoftware.App.AppShell">

