<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJob" id="createform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Title</label>
                <input id="linkUrl" asp-for="Naziv" onchange="UrlChanged()" style="width:400px;" class="form-control" autocomplete="off" />
                <span id="valmsg" style="display:none" asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tip" class="control-label">Type</label>
                <input id="linkUrl" asp-for="Tip" onchange="UrlChanged()" style="width:400px;" class="form-control" autocomplete="off" />
                <span id="valmsg" style="display:none" asp-validation-for="Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorija" class="control-label">Category</label>
                <input id="linkUrl" asp-for="Kategorija" onchange="UrlChanged()" style="width:400px;" class="form-control" autocomplete="off" />
                <span id="valmsg" style="display:none" asp-validation-for="Kategorija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label">Description</label>
                <input id="linkUrl" asp-for="Opis" onchange="UrlChanged()" style="width:400px;" class="form-control" autocomplete="off" />
                <span id="valmsg" style="display:none" asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label">Location</label>
                <input id="linkUrl" asp-for="Lokacija" onchange="UrlChanged()" style="width:400px;" class="form-control" autocomplete="off"/>
                <span id="valmsg" style="display:none" asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="button" id="addtags" value="Submit" onclick="ShowTags()" class="btn btn-success" />*@
